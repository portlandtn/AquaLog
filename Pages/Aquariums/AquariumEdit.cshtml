@page "{aquariumId:int?}"

@model AquariumEdit
@{
    ViewData["Title"] = "Editing " + Model.Aquarium.Name;
}
<h1>Editing @Model.Aquarium.Name</h1>

<form method="post">
    <input type="hidden" asp-for="Aquarium.AquariumId" />
    <div class="form-group">
        <label asp-for="Aquarium.Name"></label>
        <input asp-for="Aquarium.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Aquarium.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Aquarium.Capacity">Capacity (Gallons)</label>
        <input asp-for="Aquarium.Capacity" class="form-control" />
        <span class="text-danger" asp-validation-for="Aquarium.Capacity"></span>
    </div>
    <div class="form-group">
        <label asp-for="Aquarium.Type">Type</label>
        <select asp-items = "@Model.AquariumTypes" class="form-control" asp-for="Aquarium.Type">
        </select>
    </div>
    <div class ="form-group">
        <label asp-for="Aquarium.Description"></label>
        <input asp-for="Aquarium.Description" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}