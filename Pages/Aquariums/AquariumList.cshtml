@page
@model AquariumList
@{
    ViewData["Title"] = "Aquariums";
}
<h1>@ViewData["Title"]</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class = "form-control" value = "" asp-for="SearchTerm"/>
            <span class="input-group-btn">
                <button class = "btn btn-primary btn-default">
                    Search
                </button>
            </span>
        </div>
    </div>
</form>
<div class="row">
@foreach(var aquarium in Model.Aquariums)
{
    <partial name="_AquariumCards" model="aquarium" />
}
</div>

<a asp-page = "./AquariumEdit" class = "btn btn-primary">Add New</a>