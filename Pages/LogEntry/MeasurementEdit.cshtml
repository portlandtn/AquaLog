@page "{id:int?}"

@model MeasurementEdit
@{
    ViewData["Title"] = "Title";
    //(@Model.Measurement.AquariumId == 0) ? "New Log Entry" : "Editing " + Model.Aquarium.Name + " on " + Model.Measurement.Log.Date;
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <input type="hidden" asp-for="Measurement.MeasurementId" />
    <div class="form-group">
        <label asp-for="Measurement.Log.Date"></label>
        <input asp-for="Measurement.Log.Date" class="form-control" />
        <span class="text-danger" asp-validation-for="Measurement.Log.Date"></span>


<button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}