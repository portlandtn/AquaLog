@using AquaLog.Core
@model MeasurementKey

<div class="card m-2 col-md-3" style="width: 18rem;">
  <div class="card-body">
    <h3 class="card-title">@Model.Name</h3>
    <p class="card-text">Ideal Level: </p>
    <p class="card-text">Range: </p>
        <a class="btn btn-primary"
            asp-page="./MeasurementKeyDetails"
            asp-route-MeasurementKeyId="@Model.MeasurementKeyId">
            Details</a>
        <a class="btn btn-primary"
            asp-page="./MeasurementKeyEdit"
            asp-route-MeasurementKeyId="@Model.MeasurementKeyId">
            Edit</a>
        <a class="btn btn-primary"
            asp-page="./MeasurementKeyDelete"
            asp-route-MeasurementKeyId="@Model.MeasurementKeyId">
            Delete</a>
  </div>
</div>